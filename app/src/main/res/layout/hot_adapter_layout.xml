<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_margin="@dimen/dp_10">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="@dimen/dp_120"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/splash_activity_logo"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="@dimen/sp_14"
            android:maxLines="2"
            android:textColor="@color/grey_first"
            android:layout_toRightOf="@+id/left_image"
            android:layout_marginLeft="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments_total"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/grey_second"/>
            <TextView
                android:id="@+id/deep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:textColor="@color/label_color"
                android:textSize="@dimen/sp_8"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/label_bg"/>
            <TextView
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_4"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/sp_8"
                android:background="@drawable/top_label_bg"/>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/cut_line"
        android:layout_below="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</RelativeLayout>