<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/center_rl"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <com.teach.news10.design.RoundImage
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:id="@+id/logo_image"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/splash_activity_logo" />
        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_label_bg"
            android:text="+关注"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/app_theme_color"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/logo_image">
            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/sp_14"
                android:text="魔鬼首领"/>
            <ImageView
                android:id="@+id/second_logo"
                android:layout_toRightOf="@+id/nick"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/sp_14" />
            <ImageView
                android:id="@+id/vip"
                android:layout_toRightOf="@+id/second_logo"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/sp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_below="@+id/nick"
                android:layout_marginTop="@dimen/dp_5"
                android:text="刚刚"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/grey_second"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_des"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:text="现在知道"
        android:lineSpacingMultiplier="1.2"
        android:layout_below="@+id/center_rl"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/grey_first"/>
</RelativeLayout>