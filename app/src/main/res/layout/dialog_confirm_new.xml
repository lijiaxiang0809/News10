<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/dialog_title_line" />

    <TextView
        android:id="@+id/title"
        style="@style/lib_style_text_size2"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/content"
        style="@style/Style_TextViewDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:padding="20dip"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/grey_first" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            style="@style/Button_DialogConfirmNew"
            android:background="@drawable/btn_dialog_left"
            android:text="取消"
            android:textColor="@drawable/text_gray_blue" />

        <ImageView
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <Button
            android:id="@+id/confirm"
            style="@style/Button_DialogConfirmNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_right"
            android:text="queren"
            android:textColor="@drawable/text_gray_blue" />
    </LinearLayout>

</LinearLayout>